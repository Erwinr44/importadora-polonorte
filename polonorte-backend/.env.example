# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

APP_NAME="Sistema Polonorte"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Guatemala
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=polonorte
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# CONFIGURACIÓN DE SESIONES Y CACHÉ
# ============================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# ============================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ============================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@polonorte.com"
MAIL_FROM_NAME="${APP_NAME}"

# SendGrid API Key (alternativa a SMTP)
SENDGRID_API_KEY=

# ============================================
# CONFIGURACIÓN DE TWILIO (WhatsApp)
# ============================================

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# Ejemplo: whatsapp:+14155238886
# Obtener credenciales en: https://console.twilio.com

# ============================================
# CONFIGURACIÓN DE AUTENTICACIÓN (JWT)
# ============================================

JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ============================================
# CONFIGURACIÓN DE CORS
# ============================================

# URL del frontend (separadas por coma si son múltiples)
FRONTEND_URL=http://localhost:3000

# Orígenes permitidos para CORS
CORS_ALLOWED_ORIGINS="${FRONTEND_URL}"

# ============================================
# CONFIGURACIÓN DE LOGS
# ============================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Rate limiting (solicitudes por minuto)
THROTTLE_LOGIN=10
THROTTLE_API=120

# ============================================
# CONFIGURACIÓN DE SERVICIOS EXTERNOS
# ============================================

# AWS (opcional, para hosting en producción)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (opcional, para notificaciones en tiempo real)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================

VITE_APP_NAME="${APP_NAME}"

# ============================================
# NOTAS DE CONFIGURACIÓN
# ============================================

# 1. Copiar este archivo: cp .env.example .env
# 2. Generar APP_KEY: php artisan key:generate
# 3. Configurar credenciales de base de datos
# 4. Configurar credenciales de Twilio y SendGrid
# 5. Ejecutar migraciones: php artisan migrate
# 6. Poblar datos iniciales: php artisan db:seed

# Para obtener credenciales:
# - Twilio: https://console.twilio.com
# - SendGrid: https://app.sendgrid.com/settings/api_keys